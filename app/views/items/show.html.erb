<% content_for :head do %>
<title><%= @item.title %> - monolise</title>
<meta name="description" contene="<%= @item.title %>に関する情報です。この商品を持ってる人を表示しています。">
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.large_image.present? %>
          <%= image_tag(@item.large_image , alt: @item.title) %>
          <% else %>
          <% #TODO 商品イメージ %>
          <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @item.have_users.each do |u| %>
          <%= link_to gravatar_for(u,size: 20), u%>
          <% end %>
          <% # TODO Haveしたユーザー一覧 %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% @item.want_users.each do |u| %>
          <%= link_to gravatar_for(u,size: 20), u %>
          <% end %>
          <% # TODO Wantしたユーザー一覧 %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}),  @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
